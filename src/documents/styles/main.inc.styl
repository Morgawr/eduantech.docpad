article.post
	h1
		margin-top: 0px
		margin-bottom: 40px

	.meta
		position: absolute
		width: 150px
		left: 0px

		font-size: 13px
		color: dark_gray
		//line-height: 18px
		text-align: right

		p
			margin 0

