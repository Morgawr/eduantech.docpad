/* ============================================================================
TAGS' STYLES
============================================================================ */

/* ----------------------------------------------------------------------------
Heading tags */

h1, h2, h3, h4, h5, h6
	line-height: 1.2em
	font-family: title_font
	color: content_color
	text-rendering: optimizelegibility
	margin-top: 1em
	margin-bottom: .5em

h1, h2
	font-weight: 400
h3, h4, h5, h6
	font-weight: bold

h1
	font-size: 1.9em
h2
	font-size: 1.5em
h3
	font-size: 1.25em
h4
	font-size: 1.125em


/* ----------------------------------------------------------------------------
Anchor tags */

a:link, a:visited
	color: link_unvisited
	background: inherit
	text-decoration: none
a:visited
	// nothing here
a:hover
	text-decoration: underline
a:focus
	outline: thin-dotted
a:active
	outline: thin-dotted


/* ----------------------------------------------------------------------------
Horizontal ruler */

hr
	border: 0
	margin: 0
	height: 1px
	width: 100%
	border-bottom: solid 1px normal_gray

/* ----------------------------------------------------------------------------
Code/pre styles */

code
	font: mono_font
	font-size: .75em

// What `` generates when in Markdown, the <code> tag
code.inline-code
	background: normal_gray
	font-weight: bold
	padding: .1em .18em
	margin: 0
	border: 1px solid light_gray
	white-space: nowrap

// Styles for code blocks' container
pre
	text-align: left
	line-height: 1em
	border: 1px solid light_gray


/* ============================================================================
MAIN LAYOUT STYLES
============================================================================ */

*
	// Make width/height include margin/padding in calculation
	//box-sizing: border-box
	// Font smoothing...
	//text-shadow: 1px 1px 1px rgba(0,0,0,.01)

body
	line-height: 1.5
	font-family: font
	font-size: 15px
	font-weight: 300

	color: content_color
	background: background

main
	margin: 0 auto
	padding-top: 120px // nice separation from initial menu
	min-height: 200px
	min-width: 500px
	max-width: 800px
	//position: relative

/* ----------------------------------------------------------------------------
Header & navigation */

header[role="banner"]
	z-index: 1 // on top of everything
	position: fixed // stay on top of page at all times
	clear: both
	width: 100%

	background: lighter_gray
	opacity: .9
	border-bottom: 1px darker_gray solid

	nav
		margin: 0 auto
		min-width: 500px
		max-width: 800px
		float: none
		text-align: center

		ul
			margin: 0
			padding: 0
			list-style: none

			li
				display: inline
				margin: inherit
				padding: inherit

				border-left: 1px darker_gray solid

			li:last-child
				border-right: 1px darker_gray solid

		a
			font-size: .9em
			font-weight: bold
			text-transform: uppercase
			letter-spacing: 1px

			display: inline-block
			//margin: .5em .3em
			border-bottom: 3px var_black solid

		a.menu-current
			border-bottom: 3px link_unvisited solid

		a:hover
			text-decoration: none
			transition: border-color .15s ease
			border-color: link_unvisited
			color: var_black

		a:link, a:visited
			color: var_black

/* ----------------------------------------------------------------------------
Content */

article.post, article.page
