@import 'fontello.css'

// Highlight.js
@import 'github.css'



/* ============================================================================
BASIC TAGS' STYLES
============================================================================ */

/* ----------------------------------------------------------------------------
Heading tags */

h1, h2, h3, h4, h5, h6
	line-height  1.2em
	font-family  title_font
	color  content_color
	text-rendering  optimizelegibility
	margin-top  1em
	margin-bottom  0.5em

h1, h2
	font-weight  400
h3, h4, h5, h6
	font-weight  bold

h1
	font-size  1.9em
h2
	font-size  1.5em
h3
	font-size  1.25em
h4
	font-size  1.125em


/* ----------------------------------------------------------------------------
Anchor tags */

a:link, a:visited
	color  normal_blue
	background  inherit
	text-decoration  none
a:visited
	//color  dark_blue
a:hover
	text-decoration  underline
a:focus
	outline  thin-dotted
a:active
	outline  thin-dotted


/* ----------------------------------------------------------------------------
Horizontal ruler */

// Nothing here yet...


/* ----------------------------------------------------------------------------
Code/pre styles */

code
	font  mono_font !important
	font-size  0.75em

// What `` generates when in Markdown, the <code> tag
code.inline-code
	background  normal_gray
	font-weight  bold
	padding  0.1em 0.18em
	margin  0
	border  1px solid light_gray
	white-space  nowrap

// Styles for code blocks' container
pre
	line-height  1em
	border  1px solid light_gray


/* ============================================================================
CONTAINER AND STUFF
============================================================================ */

*
	// Make width/height include margin/padding in calculation
	//box-sizing  border-box
	// Font smoothing...
	text-shadow  1px 1px 1px rgba(0,0,0,0.01)

html
	border-top  10px #333 solid

header[role="banner"]
	margin  0 auto
	padding  0 30px 15px 0
	width  500px
	position  relative
	a#title
		font-size  1.2em
		font-weight  bold
		text-align  right

		top  -4px
		left  -200px
		display  block
		position  absolute

		margin 0
		width  150px

	a#title:link, a#title:visited
		color  foreground
	a#title:hover
		text-decoration  none

	nav
		a
			margin-right  10px
			font-size  0.9em

body
	line-height  1.5
	font-family  font
	font-size  0.9em
	font-weight  300

	color  content_color
	background  background
	//margin  0 auto

	padding-top  20px
	overflow-x: hidden; // prevents horizontal scroll bars (for the menu)
	-webkit-tap-highlight-color: rgba(0,0,0,0); // disable webkit tap highlight

	pre
		text-align  left

	main
		border-top 1px normal_gray solid

article
	// The post meta stuff
	margin  0 auto
	padding  50px 230px 50px 200px
	//padding-top  50px
	//padding-left  200px
	min-height  200px
	max-width  500px
	position  relative

	h1
		margin-top  0px

	.meta
		position  absolute
		width  150px
		left  0px

		font-size  13px
		color  dark_gray
		//line-height  18px
		text-align  right

		p
			margin 0


/* ============================================================================
FOOTER
============================================================================ */

footer
	background  background
	color  content_color
	text-align  center
	font-size  0.8em

	display  block
	border-top  1px normal_gray solid
	clear  both

	position  relative
	bottom  0


