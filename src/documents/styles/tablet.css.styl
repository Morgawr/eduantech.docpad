@import 'vars.inc'

div#wrapper
	width  93%
	max-width  800px

	// The header, i.e. the logo and navigation
	header[role='banner']
		width  100%
		height  100%
		margin-bottom  30px
		margin-top  50px

		// Social icons
		div#social-icons
			display  none

		// Logo
		img
			float  left
			margin-right  10px

		// Navigation
		nav
			margin-top  auto
			margin-bottom auto
			//margin  0 auto
			text-transform uppercase
			font-weight  bold

			a
				display  block

			a:link, a:visited
				color  foreground
				background  inherit
				text-decoration  none
				border-bottom  none
			a:hover, a:active
				text-decoration  none

			ul
				padding-left  0
				list-style  none

				li
					a
						padding  0.1em 0
						padding-left  0.3em

				li:hover
					background  lighter_gray

				li#menu-current
					a
						color  dark_gray

	main
		clear  both

	footer
		margin-top  50px
